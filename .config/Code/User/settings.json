    "editor.scrollBeyondLastLine": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "[Monokai]": {
            "rules": {
                "variable.readonly.fileScope:cpp": "#AE81FF",
                "variable.readonly.fileScope:c": "#AE81FF",

                "variable:dockerfile": "#FD971F",
                "parameter:dockerfile": {
                    "fontStyle": "",
                    "foreground": "#F8F8F2",
                },

                "variable.readonly:go": "#AE81FF",

                "*.readonly:python": "#AE81FF",
                "enumMember:python": "#AE81FF",
                "property.declaration:python": "#A6E22E",

                // Normal rust customizations
                "attribute.defaultLibrary:rust": "#66D9EF",
                "builtinAttribute:rust": "#66D9EF",
                "comment.documentation:rust": {
                    "bold": true,
                },
                "derive.defaultLibrary:rust": "#A6E22E",
                "selfKeyword:rust": "#FD971F",
                "variable.constant:rust": "#AE81FF",
                "variable.static:rust": "#AE81FF",

                // "injected" (i.e. doc-comment) rust customizations
                "attribute.injected:rust": "#F8F8F2",
                "attributeBracket.injected:rust": "#F8F8F2",
                "brace.injected:rust": "#F8F8F2",
                "bracket.injected:rust": "#F8F8F2",
                "builtinAttribute.injected:rust": "#66D9EF",
                "comma.injected:rust": "#F8F8F2",
                "generic.injected:rust": "#F8F8F2",
                "operator.injected:rust": "#F92672",
                "parenthesis.injected:rust": "#F8F8F2",
                "punctuation.injected:rust": "#F92672",
                "semicolon.injected:rust": "#F8F8F2",
                "unresolvedReference.injected:rust": "#F8F8F2",

                "keywordNameCall:robotframework": "#A6E22E",
                "keywordNameDefinition:robotframework": {
                    "underline": true
                },
                "testCaseName:robotframework": {
                    "underline": true
                },
                "header:robotframework": {
                    "bold": true
                },

                "tomlArrayKey:toml": {
                    "foreground": "#F92672",
                    "fontStyle": ""
                },
                "tomlTableKey:toml": "#F92672",
            },
        }
    },
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            "textMateRules": [
                {
                    "scope": "variable.key.toml",
                    "settings": {
                        "foreground": "#F92672"
                    },
                },
                {
                    "scope": "support.type.property-name.toml",
                    "settings": {
                        "foreground": "#F92672",
                        "fontStyle": "",
                    },
                },
                {
                    "scope": "support.type.property-name.array.toml",
                    "settings": {
                        "foreground": "#A6E22E",
                        "fontStyle": ""
                    },
                },
                {
                    "scope": "support.type.property-name.table.toml",
                    "settings": {
                        "foreground": "#A6E22E",
                        "fontStyle": ""
                    },
                },
                {
                    "scope": "variable.other.constant.starlark",
                    "settings": {
                        "foreground": "#AE81FF",
                    }
                },
                {
                    "scope": "constant.changelogs",
                    "settings": {
                        "foreground": "#AE81FF",
                    }
                },
                {
                    "scope": "punctuation.other.bracket.spec",
                    "settings": {
                        "foreground": "#F92672",
                    }
                },
                {
                    "scope": "variable.other.spec",
                    "settings": {
                        "foreground": "#FD971F",
                    }
                },
                {
                    "scope": "variable.other.changelogs",
                    "settings": {
                        "fontStyle": "underline"
                    }
                },
                {
                    "scope": "entity.name.section.spec",
                    "settings": {
                        "foreground": "#A6E22E",
                        "fontStyle": "underline"
                    }
                }
            ],
        }
    },
    "editor.showFoldingControls": "always",
