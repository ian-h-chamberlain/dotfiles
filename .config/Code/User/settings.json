    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": false,
    "editor.find.cursorMoveOnType": true,
    "editor.fontFamily": "Input Mono, JetBrainsMonoNL Nerd Font, Monaco, Courier New, monospace",
