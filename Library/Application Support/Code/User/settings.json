{
    // Language-specific settings
    "[bazel]": {
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": false
    },
    "[org]": {
        "editor.wordWrap": "on"
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.suggest.showSnippets": false
    },
    "[rust]": {
        "editor.formatOnSave": true
    },


    // TODO: reorganize the remaining sections into extension-specific vs VSCode
    "arduino.defaultBaudRate": 9600,
    "arduino.logLevel": "info",
    "breadcrumbs.enabled": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Input Mono, Monaco, 'Courier New', monospace",
    "editor.fontSize": 11,
    "editor.fontWeight": "100",
    "editor.minimap.showSlider": "always",
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [
        80
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "top",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-_",
    "explorer.autoReveal": false,
    "extensions.ignoreRecommendations": false,
    "files.associations": {
        "*.h": "c",
        "*.init": "json",
        "*.inputactions": "json",
        "Cargo.lock": "toml",
        "*.rs": "rust",
        "*.service": "ini",
        "*.unity": "yaml",
        "*Brewfile": "ruby",
        ".clang-format": "yaml",
        ".gitmodules": "properties",
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "gitlens.advanced.fileHistoryFollowsRenames": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": true,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    },
    "gitlens.blame.avatars": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.keymap": "alternate",
    "gitlens.views.compare.files.layout": "list",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.views.repositories.autoRefresh": false,
    "gitlens.views.repositories.enabled": false,
    "gitlens.views.search.files.layout": "list",
    "org.todoKeywords": [
        "TODO",
        "PROG",
        "DONE"
    ],
    "python.formatting.provider": "black",
    "python.terminal.activateEnvironment": false,
    "python.venvPath": "~/.pyenv",
    "rust-analyzer.inlayHints.maxLength": 10,
    "rust-analyzer.inlayHints.typeHints": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.scrollback": 10000,
    "typescript.check.npmIsInstalled": false,
    "vscode-neovim.highlightGroups.highlights": {
        "Conceal": "vim",
        "Directory": "vim",
        "IncSearch": {
            "backgroundColor": "theme.editor.findMatchBackground",
            "borderColor": "theme.editor.findMatchBorder"
        },
        "Search": {
            "backgroundColor": "theme.editor.findMatchHighlightBackground",
            "borderColor": "theme.editor.findMatchHighlightBorder"
        },
        "Substitute": "vim",
        "Todo": {
            "backgroundColor": "#ffeb3b",
            "color": "#2196f3",
            "overviewRulerColor": "rgba(255,189,42,0.8)"
        },
        "Visual": {
            "backgroundColor": "theme.editor.selectionBackground"
        }
    },
    "vscode-neovim.highlightGroups.ignoreHighlights": [
        "SpecialKey",
        "EndOfBuffer",
        "TermCursor",
        "TermCursorNC",
        "NonText",
        "ErrorMsg",
        "MoreMsg",
        "ModeMsg",
        "LineNr",
        "CursorLineNr",
        "Question",
        "StatusLine",
        "StatusLineNC",
        "VertSplit",
        "Title",
        "VisualNC",
        "WarningMsg",
        "WildMenu",
        "^Diff",
        "Sign",
        "SignColumn",
        "^Spell",
        "^Pmenu",
        "^Tab",
        "^Cursor",
        "ColorColumn",
        "QuickFixLine",
        "Whitespace",
        "NormalNC",
        "Normal",
        "NormalFloat",
        "MsgSeparator",
        "MsgArea",
        "^RedrawDebug",
        "Cursor",
        "lCursor",
        "MatchParen",
        "^Nvim",
        "Operator",
        "Delimiter",
        "Identifier",
        "SpecialChar",
        "Number",
        "Type",
        "String",
        "Error",
        "Comment",
        "Constant",
        "Special",
        "Statement",
        "PreProc",
        "Underlined",
        "Ignore",
        "Character",
        "Boolean",
        "Float",
        "Function",
        "Conditional",
        "Repeat",
        "Label",
        "Keyword",
        "Exception",
        "Include",
        "Define",
        "Macro",
        "PreCondit",
        "StorageClass",
        "Structure",
        "Typedef",
        "Tag",
        "SpecialComment",
        "Debug",
        "Folded",
        "FoldColumn"
    ],
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "vscode-neovim.neovimInitPath": "~/.vimrc",
    "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
    "window.restoreWindows": "folders",
    "window.title": "${folderName}${separator}${activeEditorMedium} ${dirty}",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#9d550f",
        "editorCursor.foreground": "#9d550f"
    },
    "workbench.colorTheme": "Monokai",
    "workbench.editor.enablePreview": false,
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.settings.editor": "json"
}
