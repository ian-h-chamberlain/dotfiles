{
	"Self-compiling script": {
		"body": [
			"#!/bin/sh",
			"#[rustfmt::skip] mod _skip {",
			"#![allow()] /*",
			"OUT=\"\\$(mktemp)\"",
			"rustc \"\\$0\" -o \"\\${OUT}\" || exit \\$?",
			"exec \"\\${OUT}\" \"\\$@\"",
			"# */ }",
			"",
			"fn main() {",
			"    $0",
			"}"
		],
		"description": "A polyglot header that allows writing a self-compiling Rust script",
		"prefix": [
			"#!/bin/sh"
		]
	}
}
